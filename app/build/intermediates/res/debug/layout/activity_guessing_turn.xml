<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jenil.parsedemo.GuessingTurnActivity"
    android:background="#ff75fffa">

    <com.example.jenil.parsedemo.PagerContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pager_container_guessing"
        android:background="#CCC"
        android:layout_alignParentStart="true">
        <android.support.v4.view.ViewPager
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal" />
    </com.example.jenil.parsedemo.PagerContainer>

    <LinearLayout
        android:id="@+id/guessing_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/pager_container_guessing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give up?"
        android:id="@+id/giveUp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
